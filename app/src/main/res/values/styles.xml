        <item name="neumorph_shadowColorDark">#373E56</item> <!-- Dunklerer Schatten, aber weniger intensiv -->
        <item name="neumorph_shapeType">flat</item>
        <!-- Textfarbe zu Weiß angepasst für bessere Sichtbarkeit -->
        <item name="android:textColor">@color/white</item>
        <item name="neumorph_shapeAppearance">@style/ShapeAppearance.Neumorph.Button</item>
        <!-- Optional: Hintergrund des Buttons leicht transparent machen -->
        <item name="android:background">#33FFFFFF</item> <!-- Leichte Transparenz, änderbar je nach Bedarf -->
    </style>

