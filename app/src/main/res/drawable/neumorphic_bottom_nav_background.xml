<!-- res/drawable/neumorphic_bottom_nav_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base gradient background -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#000000"
                android:endColor="#5D6786"
                android:angle="45" />
            <corners android:radius="16dp"/>
        </shape>
    </item>
    <item android:right="4dp" android:top="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#00000000"/>
            <corners android:radius="16dp"/>
            <padding android:right="4dp" android:top="4dp"/>
            <gradient
            android:startColor="#33000000"
            android:endColor="#11000000"
            android:angle="225" />
        </shape>
    </item>
    <item android:bottom="4dp" android:left="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/>
            <corners android:radius="16dp"/>
            <padding android:bottom="4dp" android:left="4dp"/>
            <gradient
            android:startColor="#55FFFFFF"
            android:endColor="#11FFFFFF"
            android:angle="45" />
        </shape>
    </item>
</layer-list>
