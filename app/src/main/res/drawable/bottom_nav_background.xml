<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Haupt-Hintergrundfarbe -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#5F6179"/> <!-- Dunkles Graublau -->
            <corners android:radius="16dp"/>
        </shape>
    </item>

    <!-- Innerer Schatten oben (subtiler, um mit dem dunkleren Hintergrund zu harmonieren) -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#6F7189"
            android:endColor="#5D66D0"
            android:angle="270"/>
            <corners android:radius="16dp"/>
        </shape>
    </item>

    <!-- Innerer Schatten unten (subtiler, um mit dem dunkleren Hintergrund zu harmonieren) -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#4F5169"
            android:endColor="#5D66D0"
            android:angle="90"/>
            <corners android:radius="16dp"/>
        </shape>
    </item>

    <!-- Äußerer Schatten, um eine leichte Erhebung zu simulieren (angepasst für dunkleren Hintergrund) -->
    <item android:top="2dp" android:right="2dp" android:bottom="2dp" android:left="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#5F6179"/>
            <corners android:radius="14dp"/>
            <padding android:top="1dp" android:right="1dp" android:bottom="1dp" android:left="1dp"/>
        </shape>
    </item>
</layer-list>
