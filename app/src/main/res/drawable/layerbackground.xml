<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#80BFC2C5"/> <!-- Decreased alpha to 80 for stronger transparency -->
            <corners android:radius="40dp"/>
            <padding
                android:bottom="10dp"
                android:right="10dp"
                />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#80FFFFFF"/> <!-- Decreased alpha to 80 for stronger transparency -->
            <corners android:radius="40dp"/>
            <padding
                android:top="10dp"
                android:left="10dp"
                />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#80E0E0E0"/> <!-- Decreased alpha to 80 for stronger transparency -->
            <corners android:radius="40dp"/>
        </shape>
    </item>
</layer-list>
